##############################################
# üåê The Polyverse Ledger - Environment File
# Example configuration for local setup
# Copy this as `.env` and update your credentials
##############################################

# ========================================================
# üß© DATABASE / SUPABASE CONFIGURATION
# ========================================================

# PostgreSQL Database (provided by Supabase)
DATABASE_URL="postgresql://postgres:<PASSWORD>@<PROJECT>.supabase.co:5432/postgres"

# Supabase Project URL
SUPABASE_URL=https://<PROJECT>.supabase.co

# Supabase Keys
SUPABASE_SERVICE_ROLE_KEY=<YOUR_SUPABASE_SERVICE_ROLE_KEY>
# SUPABASE_ANON_KEY=<YOUR_SUPABASE_ANON_KEY>

# Prisma ORM
# Make sure the DATABASE_URL above matches your Supabase connection
# Run: npx prisma migrate dev --name init

# ========================================================
# üîê AUTHENTICATION / JWT CONFIGURATION
# ========================================================

# Secret for JWT generation
JWT_SECRET=<YOUR_JWT_SECRET>

# ========================================================
# ‚õìÔ∏è BLOCKCHAIN / WEB3 CONFIGURATION
# ========================================================

# Ethereum or SKALE private key for deployment and transactions
PRIVATE_KEY=<YOUR_WALLET_PRIVATE_KEY>

# Infura / Alchemy Configuration
INFURA_PROJECT_ID=<YOUR_INFURA_PROJECT_ID>

# RPC Endpoints (choose one)
RPC_URL=https://sepolia.infura.io/v3/<YOUR_INFURA_PROJECT_ID>
# RPC_URL=https://mainnet.infura.io/v3/<YOUR_INFURA_PROJECT_ID>

# Enable or disable blockchain interaction
REQUIRE_BLOCKCHAIN=true

# SKALE Testnet RPC
SKALERPC_URL=https://staging-v3.skalenodes.com/v1/staging-utter-unripe-menkar

# ========================================================
# üß† API / BACKEND CONFIGURATION
# ========================================================

# Fastify API Base URL
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080
VITE_API_URL=http://localhost:8080

# Node Environment
NODE_ENV=development
VITE_NODE_ENV=development

# ========================================================
# üßæ IPFS CONFIGURATION
# ========================================================

# Local or remote IPFS node endpoint
IPFS_URL=http://localhost:5001

# For remote IPFS (Infura or Pinata)
# IPFS_PROJECT_ID=<YOUR_INFURA_PROJECT_ID>
# IPFS_PROJECT_SECRET=<YOUR_INFURA_PROJECT_SECRET>

# ========================================================
# üí≥ PAYPAL CONFIGURATION
# ========================================================

# PayPal Sandbox (for testing)
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=<YOUR_PAYPAL_SANDBOX_CLIENT_ID>
PAYPAL_CLIENT_SECRET=<YOUR_PAYPAL_SANDBOX_CLIENT_SECRET>

# Frontend PayPal Client ID (used by React app)
VITE_PAYPAL_CLIENT_ID=<YOUR_PAYPAL_SANDBOX_CLIENT_ID>

# ========================================================
# üßæ APP-SPECIFIC VARIABLES
# ========================================================

# Free Plan ID or Subscription ID (if applicable)
FREE_PLAN_ID=<YOUR_FREE_PLAN_ID>

# ========================================================
# ‚öôÔ∏è OTHER CONFIGURATIONS
# ========================================================

# Miscellaneous build and runtime configs
REQUIRE_BLOCKCHAIN=true
PORT=8080

